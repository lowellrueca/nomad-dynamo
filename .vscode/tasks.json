{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "close": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "post-build",
            "type": "shell",
            "command": "cp",
            "args": [
                "-Path",
                "${workspaceFolder}/nomad-nodes/obj/Debug/net48/Nomad.dll",
                "-Destination",
                "C:/ProgramData/Dynamo/Dynamo Revit/1.3/packages/nomad",
                "-Force"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "revealProblems": "onProblem",
                "close": true
            },
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}