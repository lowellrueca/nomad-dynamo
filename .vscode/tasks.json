{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "msbuild",
            "args": ["${workspaceFolder}/NomadDynamo.sln"],
            "problemMatcher": ["$msCompile"],
            "presentation": {
                "clear": true,
                "close": true,
                "reveal": "silent",
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "launch-revit",
            "type": "shell",
            "command": "Start-Process",
            "args": [
                "C:\\Program Files\\Autodesk\\Revit 2019\\Revit.exe"
            ],
            "presentation": {
                "clear": false,
                "close": true,
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
            "dependsOn": [
                "build",
            ],
            "group": "test",
            "problemMatcher": []
        }
    ],
}